.setting-box.hide-settings
    .toggle-settings
        i.fa.fa-cog.fa-lg
    .setting-content.text-center
        .option-box.color-options
            h4.option-title Color Options
            - var themes = ["green-theme", "blue-theme", "red-theme", "orange-theme", "purble-theme"]
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .option-box.font-options
            h4.option-title Font Options
            - var fonts = ["cairo", "open-Sans"]
            select.form-control
                each font in fonts
                    option(value=font)=font + ' Font'
        .option-box
            h4.option-title SideBar Options
            